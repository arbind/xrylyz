/* CSS Variables */
/* ================================================  */

$rylyzPlayerHost: '<%= RYLYZ_PLAYER_HOST %>';
$rylyzFrameWidth: 788px;
$rylyzMinFrameHeight: 488px;

/*
$themeColor:      #ce4dd6;
$themeBGcolor:    #222222;
$themeFontFamily: 'Delius', cursive;
*/

$xTimeOn: 0.3s;
$xTimeSlow: 0.8s;
$xTimeFast: 0.15s;
$xTimeOff: 0.01s;
$xFunction: ease-in-out;

@mixin roundCornersMixin {
  -webkit-border-radius: 8px;   -moz-border-radius: 8px;
  -ms-border-radius:  8px;      -o-border-radius: 8px;
  border-radius: 8px;  
}

@mixin transitionsOnMixin {
  -webkit-transition: all $xTimeOn $xFunction;    -moz-transition: all $xTimeOn $xFunction; 
  -ms-transition:     all $xTimeOn $xFunction;    -o-transition:   all $xTimeOn $xFunction; 
  transition:         all $xTimeOn $xFunction;
}

@mixin transitionsSlowMixin {
  -webkit-transition: all $xTimeSlow $xFunction;  -moz-transition: all $xTimeSlow $xFunction; 
  -ms-transition:     all $xTimeSlow $xFunction;  -o-transition:   all $xTimeSlow $xFunction; 
  transition:         all $xTimeSlow $xFunction;
}

@mixin transitionsFastMixin {
  -webkit-transition: all $xTimeFast $xFunction;  -moz-transition: all $xTimeFast $xFunction; 
  -ms-transition:     all $xTimeFast $xFunction;  -o-transition:   all $xTimeFast $xFunction; 
  transition:         all $xTimeFast $xFunction;
}

@mixin transitionsOffMixin {
  -webkit-transition: all $xTimeOff $xFunction;   -moz-transition: all $xTimeOff $xFunction; 
  -ms-transition:     all $xTimeOff $xFunction;   -o-transition:   all $xTimeOff $xFunction; 
  transition:         all $xTimeOff $xFunction;
}

