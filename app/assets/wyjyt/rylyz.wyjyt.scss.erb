/* default styles */
/* ================================================  */

rylyz {display:none;}

h1, h2, h3, h4, h5, h6, h7 {
  text-align: center;
  padding-left: 1em;
  padding-right: 1em;
}

.clear-both { clear:both; }

#rylyz-console {
  display:none;
  pointer-events:none;
  position:fixed;
  top:0;
  left:0;
  z-index:88888;
  background: #282828 none repeat scroll 0 0;
  width: 100%;
  min-width:800px;
  height: 100%;
  min-height:600px;
  opacity: 0.88;
  -moz-opacity: 0.88;
  filter:alpha(opacity=88);
};

#rylyz-app-spot-canvas {
  display:none;
  position:fixed;
  overflow: auto;
  z-index:288888;
  top:0;
  left:0;
  background-color:transparent;
  width: 100%;
  height: 100%;
  opacity: 1.0;
  -moz-opacity: 1.0;
  filter:alpha(opacity=100);
}
#rylyz-app-spot-frame {
  position:relative;
  margin: 88px auto 8px auto;
  width: $rylyzFrameWidth + 8px;
  min-height: $rylyzMinFrameHeight + 8px;

  background: white;

  border: 4px solid black;
  border-radius: 8px;
  -o-border-radius: 8px;
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
}
#rylyz-app-spot {
  position:relative;
  margin: 0;
  padding:0;
  width: $rylyzFrameWidth;
  min-height: $rylyzMinFrameHeight;
  overflow: hidden;
}
