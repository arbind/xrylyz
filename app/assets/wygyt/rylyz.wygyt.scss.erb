/* fields */


.prompt, .prompt-selection {
  position: relative;
  top: 0;
  left: 0;
  height: 24px;
  border-width: 1;
  margin:   8px 0px;
  padding:  5px 10px;
  font-family:Arial, Helvetica, sans-serif;
  font-size:20px;
  color:#228822;
  background-color: white;
  border: 2px solid #228822;
  @include  roundCornersMixin;

  cursor: pointer;

  label {
    position: absolute;
    text-align:left;
    top: 0;
    left: 0;
    width:  100%;
    height: 100%;
    margin: 0px 0px 0px 0px;
    padding: 4px 0px 0px 10px;
    cursor: pointer;

    color: $labelColor;
    background-color:transparent;

    font-size: 16px;
    font-family: Arial,'Helvetica Neue',Helvetica,sans-serif;
    line-height: 24px;

    @include transitionsFastMixin;

    &:hover {
      color: fade_out($labelColor, .6);
      @include transitionsFastMixin;
    }
  }
  input, textarea, select {
    border:none;
    background:none;

    height:24px;

    font-size:16px;
    font-family: Arial,'Helvetica Neue',Helvetica,sans-serif;
    line-height: 24px;

    color:#228822;
    outline:none;
    cursor: pointer;
  }
}

.prompt-selection {
  label {
    position: relative;
    padding: 4px 0px 0px 0px;
    &:hover {
      color: $labelColor;
    }
  }
}

