@import 'mixins/mixin-transitions';
@import 'mixins/mixin-round-corners';

/* CSS Variables */
/* ================================================  */

$rylyzPlayerHost: '<%= RYLYZ_PLAYER_HOST %>';
$rylyzFrameWidth: 788px;
$rylyzMinFrameHeight: 488px;

$assetsURL: 'http://' +$rylyzPlayerHost+ '/assets/';
$imagesURL: $assetsURL;

$labelColor:            #869CB2;



/* ================================================  */
/* default styles */
/* ================================================  */

rylyz {display:none;}


/* For opera and IE  so user can not see selected text */
/* *::selection {background-color:transparent} */



#ryConsole {
  display:none;
  pointer-events:none;
  position:fixed;
  top:0;
  left:0;
  z-index:88888;
  background: #080808 none repeat scroll 0 0;
  width: 100%;
  min-width:800px;
  height: 100%;
  min-height:600px;
  filter:alpha(opacity=75);
  opacity: 0.75;
}
#ryAppCanvas {
  display:none;
  position:fixed;
  overflow: auto;
  z-index:288888;
  top:0;
  left:0;
  background-color:transparent;
  width: 100%;
  height: 100%;
  filter:alpha(opacity=100);
  opacity: 1.0;
}
#ryAppFrame {
  position:relative;
  margin: 88px auto 8px auto;
  width: $rylyzFrameWidth + 8px;
  min-height: $rylyzMinFrameHeight;
  background: #fafafa;
  border-radius: 6px;
  -webkit-box-shadow: 0 2px 5px rgba(0, 0, 0, .5), 0 8px 15px rgba(0, 0, 0, .5);
  box-shadow: 0 2px 5px rgba(0, 0, 0, .5), 0 8px 15px rgba(0, 0, 0, .5);
}
#ryCloseButton {
  position:absolute;
  top: -30px;
  right: -30px;
  padding: 0px 4px 4px 4px;
  font: bold 25px/30px Arial, Helvetica;
  color: #888888;
  background-color: black;
  border: 4px solid #888888;
  border-radius: 50%;
  -o-border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  cursor: pointer;
  &:hover {
    color: #FFFFCC;
  }
}


#ryApp { /* parent root style for all apps */  
  text-decoration:  none;
  text-decoration: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
  user-select: none;
  position: relative;
  margin: 0;
  padding: 0;
  min-height: $rylyzMinFrameHeight - 40px;
  overflow: hidden;
  font-family: 'Helvetica Neue', helvetica, arial, sans-serif;
  font-size: 16px;
  text-align: center;

  /* titles */
  h1, h2, h3, h4, h5, h6, h7 {
    text-align: center;
    padding-top: 0.4em;
    padding-left: 0.3em;
    padding-right: 0.3em;
    line-height: 1.2;
   }
  /* Titles */
  h1 {
      font-size: 1.75em;
  }
  h2 {
      font-size: 1.5em;
  }
  h3 {
      font-size: 1.25em;
  }
  h4 {
      font-size: 1em;
  }
  h5 {
      font-size: 1em;
  }

  img {
     border-style: none;
  }

  /* fields */


  .prompt, .prompt-selection {
    position: relative;
    top: 0;
    left: 0;
    height: 24px;
    border-width: 1;
    margin:   8px 0px;
    padding:  5px 10px;
    font-family:Arial, Helvetica, sans-serif;
    font-size:20px;
    color:#228822;
    background-color: white;
    border: 2px solid #228822;
    @include  roundCornersMixin;

    cursor: pointer;

    label {
      position: absolute;
      text-align:left;
      top: 0;
      left: 0;
      width:  100%;
      height: 100%;
      margin: 0px 0px 0px 0px;
      padding: 4px 0px 0px 10px;
      cursor: pointer;

      color: $labelColor;
      background-color:transparent;

      font-size: 16px;
      font-family: Arial,'Helvetica Neue',Helvetica,sans-serif;
      line-height: 24px;

      @include transitionsFastMixin;

      &:hover {
        color: fade_out($labelColor, .6);
        @include transitionsFastMixin;
      }
    }
    input, textarea, select {
      border:none;
      background:none;

      height:24px;

      font-size:16px;
      font-family: Arial,'Helvetica Neue',Helvetica,sans-serif;
      line-height: 24px;

      color:#228822;
      outline:none;
      cursor: pointer;
    }
  }

  .prompt-selection {
    label {
      position: relative;
      padding: 4px 0px 0px 0px;
      &:hover {
        color: $labelColor;
      }
    }
  }

  .cards-accepted-logos {
    width: 285px;
    height: 29px;
    margin: 0px auto;
    background-position: center top;
    background-repeat: no-repeat;
    background-size: 285px 29px;
    background-image:url($imagesURL + 'cards-accepted-horizontal.png');  
  }
  .new-credit-card {
    position: relative;
    padding: 4px;
    height: 320px;
    width: 320px;
    margin: 4px;
    color: #222222;
    font-weight: normal;
    background-color: #EEEEEE;
    border: 2px solid #888888;
    border-radius: 4px;
    -o-border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    &:hover{
      color: #228822;
      background-color: #FFFFEE;
      border-color: #228822;
    }
    .card-info {  
      position: absolute;
      left: 4px;
      right:4px;
      top: 4px;
      bottom:4px;
      background-color: transparent;
      z-index:2;
      h2 {
        margin: 4px 10px;
      }
      label, input{
        margin: 4px 10px;
      }
      input.text.card-name{
        width: 180px;
      }
    }
    .accepted-card-logos {
      position: absolute;
      left: 4px;
      right:4px;
      top: 4px;
      bottom:4px;
      background-color: white;
      z-index: 1;
      opacity: 0.48;
      -moz-opacity: 0.48;
      filter:alpha(opacity=48);
    }
  }

  .existing-credit-card {
    position: relative;
    padding: 4px;
    height:150px;
    width: 320px;
    margin: 4px;
    color: #222222;
    font-weight: bold;
    background-color: #EEEEEE;
    border: 2px solid #888888;
    border-radius: 4px;
    -o-border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    &:hover{
      color: #228822;
      background-color: #FFFFEE;
      border-color: #228822;
    }
    .card-info {  
      position: absolute;
      left: 4px;
      right:4px;
      top: 4px;
      bottom:4px;
      background-color: transparent;
      z-index:2;
      .card-name{
        width: 90%;
        margin: 30px 10px 4px 10px;
        clear:both;
      }
      .card-number{
        margin: 4px 10px;
        clear:both;
        float:left;
      }
      .expiration{
        font-weight: normal;
        font-style: italic;
        margin: 4px 10px;
        float:right;
      }
    }

    .card-logo {
      position: absolute;
      left: 4px;
      right:4px;
      top: 4px;
      bottom:4px;
      background-color: white;
      z-index: 1;
      opacity: 0.48;
      -moz-opacity: 0.48;
      filter:alpha(opacity=48);
    }
    .card-logo.Visa{
      background-position: right top;
      background-repeat: no-repeat;
      background-size: 118px 38px;
      background-image:url($imagesURL + 'visa-logo.gif');  
    }
    .card-logo.MasterCard{
      background-position: right top;
      background-repeat: no-repeat;
      background-size: px 52px;
      background-image:url($imagesURL + 'mastercard-logo.png');
    }
    .card-logo.American{
      background-position: right top;
      background-repeat: no-repeat;
      background-size: 50px 42px;
      background-image:url($imagesURL + 'american-express-logo.gif');    
    }
    .card-logo.Discover{
      background-position: center top;
      background-repeat: no-repeat;
      background-size: 152px 38px;
      background-image:url($imagesURL + 'discover-logo.gif');    
    }
    .card-logo.JCB{
      background-position: right top;
      background-repeat: no-repeat;
      background-size: 48px 38px;
      background-image:url($imagesURL + 'jcb-logo.gif');    
    }
    .card-logo.Diners{
      background-position: center top;
      background-repeat: no-repeat;
      background-size:135px 45px;
      background-image:url($imagesURL + 'diners-club-logo.gif');    
    }
    .card-logo.Unknown{
      background-position: right top;
      background-repeat: no-repeat;
      background-size:118px 38px;
      background-image:url($imagesURL + 'unknown-logo.gif');    
    }

  }

  img.money {
    border: 0px;
    width: 48px;
    height: 48px;
    background-size:cover;
    background-image:url($imagesURL + 'money.png');
    vertical-align: middle; 
    text-align: center;
    margin: 2px auto;
  }

  #rylyz-purchase-offers {
    position: relative;
    display: block;
    margin: 10px auto;
    border: 1px solid black;
    width: 750px;
    height: 500px;
    clear: both;
    .offer {
      position: relative;
      float:left;
      background-color: black;
      color: white;
      margin: 20px 15px;
      width: 150px;
      height: 200px;
      text-align: center;
      line-height: 1.4em;
      border: 2px solid #888888;
      border-radius: 8px;
      -o-border-radius: 8px;
      -moz-border-radius: 8px;
      -webkit-border-radius: 8px;
      .caption {
        line-height: 2em;
      }
      .ammount-offered {
        font-size: 1.2em;
      }
      .buy.button {}
      .price {
        font-size: 1.2em;
      }
      .factor {
        font-size: 1em;
        vertical-align: middle;
        line-height: 1.2em;
        &:before{ content:'( ' ; }
        &:after{ content: ' )' ; }
      }
    }
  }
  /* Util */

  .clear-both { clear:both; }
  .position-static {position: static;}
  .position-relative {position: relative;}

  .transparent { background-color:transparent; }
  .display-none { display:none; }
  .float-left{ float:left }
  .float-right{ float:right }

  .invisible { 
   filter: alpha(opacity=0);
   opacity: 0.0; 
   visibility:hidden; 
  }

  .dim {
   filter: alpha(opacity=80);
   opacity: 0.80;
  }

  .fullscreen {
    display:block;
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
  }

  .ellipsis {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  html, ul, li { overflow:  visible; }

  input, textarea { 
   -webkit-user-select: text; -khtml-user-select: text; -moz-user-select: text; -ms-user-select: text; -o-user-select: text; user-select: text; 
  }

  .button a, a {
    text-decoration: none;
    &:visited {
      text-decoration: none;
    }
    &:hover {
     text-decoration: none;
    }  
  }

  form, fieldset {
    margin:0;
    padding:0;
    border: 0;
  }


  /*  Cool CSS3 Buttons
      http://www.red-team-design.com/just-another-awesome-css3-buttons  */
  /* ================================================  */
   
  .button {
    display: inline-block;
    white-space: nowrap;
    background-color: #ccc;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#eee), to(#ccc));
    background-image: -webkit-linear-gradient(top, #eee, #ccc);
    background-image: -moz-linear-gradient(top, #eee, #ccc);
    background-image: -ms-linear-gradient(top, #eee, #ccc);
    background-image: -o-linear-gradient(top, #eee, #ccc);
    background-image: linear-gradient(top, #eee, #ccc);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#eeeeee', EndColorStr='#cccccc');
    border: 1px solid #777;
    padding: 0 1.5em;
    margin: 0.5em;
    font: bold 1em/2em Arial, Helvetica;
    text-decoration: none;
    color: #333;
    text-shadow: 0 1px 0 rgba(255,255,255,.8);
    -moz-border-radius: .2em;
    -webkit-border-radius: .2em;
    border-radius: .2em;
    -moz-box-shadow: 0 0 1px 1px rgba(255,255,255,.8) inset, 0 1px 0 rgba(0,0,0,.3);
    -webkit-box-shadow: 0 0 1px 1px rgba(255,255,255,.8) inset, 0 1px 0 rgba(0,0,0,.3);
    box-shadow: 0 0 1px 1px rgba(255,255,255,.8) inset, 0 1px 0 rgba(0,0,0,.3);
    cursor: pointer;
  }

  .button:hover {
    background-color: #ddd;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#fafafa), to(#ddd));
    background-image: -webkit-linear-gradient(top, #fafafa, #ddd);
    background-image: -moz-linear-gradient(top, #fafafa, #ddd);
    background-image: -ms-linear-gradient(top, #fafafa, #ddd);
    background-image: -o-linear-gradient(top, #fafafa, #ddd);
    background-image: linear-gradient(top, #fafafa, #ddd);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#fafafa', EndColorStr='#dddddd');
  }

  .button:active {
    -moz-box-shadow: 0 0 4px 2px rgba(0,0,0,.3) inset;
    -webkit-box-shadow: 0 0 4px 2px rgba(0,0,0,.3) inset;
    box-shadow: 0 0 4px 2px rgba(0,0,0,.3) inset;
    position: relative;
    top: 1px;
  }

  .button:focus {
    outline: 0;
    background: #fafafa;
  }    

  .button:before {
    background: #ccc;
    background: rgba(0,0,0,.1);
    float: left;
    width: 1em;
    text-align: center;
    font-size: 1.5em;
    margin: 0 1em 0 -1em;
    padding: 0 .2em;
    -moz-box-shadow: 1px 0 0 rgba(0,0,0,.5), 2px 0 0 rgba(255,255,255,.5);
    -webkit-box-shadow: 1px 0 0 rgba(0,0,0,.5), 2px 0 0 rgba(255,255,255,.5);
    box-shadow: 1px 0 0 rgba(0,0,0,.5), 2px 0 0 rgba(255,255,255,.5);
    -moz-border-radius: .15em 0 0 .15em;
    -webkit-border-radius: .15em 0 0 .15em;
    border-radius: .15em 0 0 .15em;
    pointer-events: none;
  }

  /* Hexadecimal entities for the icons */
  .add:before { content: "\271A"; }
  .edit:before { content: "\270E"; }

  .delete:before { content: "\2718"; }
  .quit:before { content: "\2718"; }

  .save:before { content: "\2714"; }
  .email:before { content: "\2709"; }
  .like:before { content: "\2764"; }
  .next:before{ content: "\279C"; }
  .star:before { content: "\2605"; }
  .spark:before { content: "\2737"; }
  .play:before { content: "\25B6"; }

}

#ryLaunch {
  position: fixed;
  bottom: 0;
  left: 4px;
  overflow: hidden;
  cursor: pointer;
  padding: 5px 5px 3px;
  border: 1px solid black;
  border-bottom: none;
  border-radius: 4px 4px 0 0;
  background: #222;
  -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=90)";
  filter: alpha(opacity=90);
  opacity: .9;
  width:24px;
  overflow:hidden;
  -webkit-transition: all .1s linear;
  -moz-transition: all .1s linear;
  -o-transition: all .1s linear;
  -ms-transition: all .1s linear;
  transition: all .1s linear;
  font-family: helvetica, arial, sans-serif;
  font-size: 12px;
  font-weight: bold;
  color: #ccc;
  text-decoration: none;
  text-transform: uppercase;
  &:hover {
    -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
    filter: alpha(opacity=100);
    opacity: 1;
    color: #33cc00;
    #ryLaunchBtn {
      background-color: #33cc00;
    }
  }
}
#ryLaunch.ryWarmOn {
  width: 80px;
  color: #cccc33;
  #ryLaunchBtn {
    background-color: #cccc33;
  }
}
#ryLaunch.ryPoweredOn {
  width: 80px;
  color: #33cc00;
  #ryLaunchBtn {
    background-color: #33cc00;
  }
}

#ryLaunchWrapper {
  float:left;
  width:100px;
  overflow:hidden;  
}

#ryLaunchBtn {
  float:left;
  height: 24px;
  width: 24px;
  background: #fff url(http://wygyt.rylyz.ws/assets/rylyz/power-btn.png) 0 0 no-repeat;
  -webkit-transition: background-color .1s linear;
  -moz-transition: background-color .1s linear;
  -o-transition: background-color .1s linear;
  -ms-transition: background-color .1s linear;
  transition: background-color .1s linear;
}

#ryLaunchText {
  float:left;
  padding: 0px;
  margin: 0px 0px 0px 8px;
  height: 24px;
  line-height: 24px;
}
