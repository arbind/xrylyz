$rylyzPlayerHost: '<%= RYLYZ_PLAYER_HOST %>';
$appName:	'wyjyt';
$assetsURL: 'http://' +$rylyzPlayerHost+ '/assets/';
$imagesURL: $assetsURL;
$appImagesURL: $imagesURL + 'images/' +$appName+ '/';


.wyjyt-app {
	color: #222;
  background-color: #fafafa;
  font-family: 'Helvetica Neue', helvetica, arial, sans-serif;
  font-size: 16px;
  margin: 0px auto;
	padding: 20px;
  text-align: center;
  .space-screen {

  	.launch {
  		color: #222;
      font-weight: bold;
  		position: relative;
      display: inline-block;
  		width: 180px;
  		height: 180px;
  		clear: both;
  		margin: 20px 10px;
	    border: 2px solid #ccc;
      cursor: pointer;
		  border-radius: 8px;
			-o-border-radius: 8px;
			-moz-border-radius: 8px;
			-webkit-border-radius: 8px;
      &:hover {
        background: LightYellow;
      }
			.name {
				position: absolute;
				bottom: 0;
				width: 100%;
				text-align: center;
				line-height: 2em;
			}
  	}
  }

}
