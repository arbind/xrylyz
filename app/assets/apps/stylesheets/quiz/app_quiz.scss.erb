@import 'mixins/mixin-transitions.css.scss';

#ryApp {

  #ryTriviaSplash {
    padding-bottom: 150px;
    background: url(http://wygyt.rylyz.ws/assets/rylyz/olympic-logo.png) center bottom no-repeat;
  }


  /* shared by all screens */
  #ryQuizGame {
    position: relative;
    height: 600px;
    background: #fff;
    font-family: helvetica, arial, sans-serif;
  }
  #ryCloseQuiz {
    position: absolute;
    top: 10px;
    right: 10px;
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    font-weight: bold;
  }
  .ryHeader {
    background: #000;
    padding: 10px;
  }
  #ryAppName {
    float: left;
    color: #aaa;
    font-size: 14px;
    font-weight: bold;
    margin: 0;
  }
  #ryScore {
    margin: 0;
    font-size: 14px;
    font-weight: bold;
    text-align: center;
    color: #fff;
  }
  #ryAppContainer {
    padding: 40px 20px 20px;
    overflow: hidden;
  }

  /* game board */
  .ryQuestions {
    padding: 10px;
  }
  .rySet {
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }
  .rySet li {
    list-style-type: none;
    display: inline-block;
    margin: 0 10px 20px;
  }
  .ryQuestion {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 60px;
    margin-bottom: 30px;
    color: #000;
    background: #fff url(http://wygyt.rylyz.ws/assets/rylyz/olympic-icon.png) center center no-repeat;
    border: 1px solid #888;
    border-radius: 4px;
    box-shadow: 0 1px 0 rgba(255, 255, 255, .3) inset, 0 1px 5px rgba(0, 0, 0, .5);
    -webkit-transition: top .1s linear;
  }
  .ryQuestion:hover {
    top: -2px;
  }
  .ryCheck {
    display: none;
    position: absolute;
    top: -12px;
    right: -12px;
    width: 24px;
    height: 24px;
    background: url(http://wygyt.rylyz.ws/assets/rylyz/check.png) 0 0 no-repeat;
  }
  .ryLocked {
    -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
    filter: alpha(opacity=80);
    opacity: .8;
    cursor: default;
  }
  .ryLocked:hover {

  }
  .ryAnswered {
    cursor: default;
  }
  .ryAnswered:hover {

  }
  .ryAnswered .ryCheck {
    display: block;
  }

  /* question screen */

  .ryQuestionReflection {
    height: 25px;
    border: 1px solid black;
  }
  
  #ryProgressBar {
    left:0;
    right:0;
    background-color: #888888;
    border: 2px solid #555555;
    height: 18px;
    .ryProgress {
      width: 100%;
      background-color:#AAFFAA;
      height: 100%;
      @include transitionsOnMixin;
    }
  }

  #ryTrivia {
    h1, h2, h3 {
      margin: 0;
      padding: 0;
      font-family: "HelveticaNeue-CondensedBold", "Helvetica Neue", sans-serif;
      font-weight:600;
    }
    a {
      color: midnightblue;
    }
    h1 {
      font-size: 32px;
      line-height: 1.5;
      padding: .5em 1em;
      margin-bottom: .5em;
      text-align: center;
      background: -webkit-linear-gradient(#222, #444);
      color: white;
      text-shadow: 0 2px 3px black;
      border-radius: 4px 4px 0 0;
    }

    h2 {
      margin-bottom: 1em;
      font-size: 16px;
      text-transform: uppercase;
    }
    /*
    .ryHidden {
      display: none;
    }
    */
    .ryInner {
      float: left;
      width: 100%;
      box-sizing: border-box;
      padding: 0 20px 20px;
    }
  }

  #ryTriviaPicks {
    width: 375px;
    float: left;
  }

  #ryTriviaResults {
    width: 361px;
    padding-left: 20px;
    padding-top: 36px;
    text-align: center;
    float: left;
    #ryStatus {
      font-size: 36px;
      text-shadow: 0 1px 2px rgba(0, 0, 0, .8);
      text-transform: uppercase;
      &.ryCorrect {
        color: green;
      }
    }
    .ryCorrect  #ryStatus,
    .ryWrong #ryStatus {
      color: #cc0000;
    }
  }

  .ryChoice {
    position: relative;
    padding: 1em;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    cursor: pointer;
    -webkit-transition: all .2s ease;
    &:hover {
      background: LightYellow;
    }
  }
  .rySelected {
    background: #222;
    color: white;
    font-weight: bold;
    border-color: transparent;
    -webkit-transform: rotate(-1deg) scale(1.05) translateY(-5%);
    box-shadow: 0 1px 3px rgba(0, 0, 0, .3), 0 5px 10px rgba(0, 0, 0, .3);
    text-shadow: 0 1px 1px black;
    &:hover {
      background: #222;
    }
  }
  .ryRightAnswer{
    background: green;
    color: white;
    font-weight: bold;
    border-color: transparent;
    -webkit-transform: rotate(-1deg) scale(1.05) translateY(-5%);
    box-shadow: 0 1px 3px rgba(0, 0, 0, .3), 0 5px 10px rgba(0, 0, 0, .3);
    &:hover {
      background: green;
    }
  }

  .ryChoices {
    .ryAnswers {
      visibility: hidden;
    }
  }

}
