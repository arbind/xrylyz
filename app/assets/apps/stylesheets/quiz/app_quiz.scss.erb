.quiz-app {
  color: #222;
  font-family: 'Helvetica Neue', helvetica, arial, sans-serif;
  font-size: 16px;
  -webkit-transform: translateZ(0);
}

.game-board {
  .level {
    background-color: white;
    margin: 10px;
  }
  .level-1 {
