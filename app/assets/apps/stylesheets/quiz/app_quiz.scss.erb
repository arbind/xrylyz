#trivia {
  h1, h2, h3 {
    margin: 0;
    padding: 0;
    font-family: "HelveticaNeue-CondensedBold", "Helvetica Neue", sans-serif; 
    font-weight:600; 
  }
  a {
    color: midnightblue;
  }
  h1 {
    font-size: 32px;
    line-height: 1.5;
    padding: .5em 1em;
    margin-bottom: .5em;
    text-align: center;
    background: -webkit-linear-gradient(#222, #444);
    color: white;
    text-shadow: 0 2px 3px black;
    border-radius: 4px 4px 0 0;
  }

  h2 {
    margin-bottom: 1em;
    font-size: 16px;
    text-transform: uppercase;
  }
  .hidden {
    display: none;
  }
  .inner {
    float: left;
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px 20px;
  }
}

#trivia-picks {
  width: 375px;
  float: left;
}

#trivia-results {
  width: 361px;
  padding-left: 20px;
  padding-top: 36px;
  text-align: center;
  float: left;
  #status {
    font-size: 36px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, .8);
    text-transform: uppercase;
    &.correct {
      color: green;
    }
  }
  .correct  #status,
  .winner #status {
    color: green;
  }
  .wrong #status {
    color: #cc0000;
  }
  .winner-object p {
    .name, .url {
      display: block;
      margin-bottom: .5em;
    }
    .url a {
      display: block;
      width: 361px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
  }
}

.choice {
  position: relative;
  padding: 1em;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  cursor: pointer;
  -webkit-transition: all .2s ease;
  &:hover {
    background: LightYellow;
  }
}
.selected {
  background: #222;
  color: white;
  font-weight: bold;
  border-color: transparent;
  -webkit-transform: rotate(-1deg) scale(1.05) translateY(-5%);
  box-shadow: 0 1px 3px rgba(0, 0, 0, .3), 0 5px 10px rgba(0, 0, 0, .3);
  text-shadow: 0 1px 1px black;
  &:hover {
    background: #222;
  }
}
.right-answer{
  background: green;
  color: white;
  font-weight: bold;
  border-color: transparent;
  -webkit-transform: rotate(-1deg) scale(1.05) translateY(-5%);
  box-shadow: 0 1px 3px rgba(0, 0, 0, .3), 0 5px 10px rgba(0, 0, 0, .3);
  &:hover {
    background: green;
  }
}
