@import 'mixins/mixin-transitions.css.scss';

#rylyz-app-spot {

    #quiz-game {
      position: relative;
      height: 600px;
      background: #fff;
      font-family: helvetica, arial, sans-serif;
    }
    #close-rylyz {
      position: absolute;
      top: 10px;
      right: 10px;
      color: #fff;
      text-decoration: none;
      font-size: 14px;
      font-weight: bold;
    }
    .rheader {
      background: #000;
      padding: 10px;
    }
    #rapp-name {
      float: left;
      color: #aaa;
      font-size: 14px;
      font-weight: bold;
      margin: 0;
    }
    #rscore {
      margin: 0;
      font-size: 14px;
      font-weight: bold;
      text-align: center;
      color: #fff;
    }
    #rapp-container {
      padding: 40px 20px 20px;
      overflow: hidden;
    }

    /* trivia app styles */
    .rquestions {
      padding: 10px;
    }
    .rset {
      list-style-type: none;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    .rset li {
      list-style-type: none;
      display: inline-block;
      margin: 0 10px 20px;
    }
    .rquestion {
      position: relative;
      display: inline-block;
      width: 60px;
      height: 60px;
      margin-bottom: 30px;
      color: #000;
      background: #fff url(http://wygyt.rylyz.ws/assets/rylyz/olympic-icon.png) center center no-repeat;
      border: 1px solid #888;
      border-radius: 4px;
      box-shadow: 0 1px 0 rgba(255, 255, 255, .3) inset, 0 1px 5px rgba(0, 0, 0, .5);
      -webkit-transition: top .1s linear;
    }
    .rquestion:hover {
      top: -2px;
    }
    .rcheck {
      display: none;
      position: absolute;
      top: -12px;
      right: -12px;
      width: 24px;
      height: 24px;
      background: url(http://wygyt.rylyz.ws/assets/rylyz/check.png) 0 0 no-repeat;
    }
    .rlocked {
      -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
      filter: alpha(opacity=80);
      opacity: .8;
      cursor: default;
    }
    .rlocked:hover {

    }
    .ranswered {
      cursor: default;
    }
    .ranswered:hover {

    }
    .ranswered .rcheck {
      display: block;
    }

