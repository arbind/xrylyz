$rylyzPlayerHost: '<%= RYLYZ_PLAYER_HOST %>';
$appName:	'wygyt';
$assetsURL: 'http://' +$rylyzPlayerHost+ '/assets/';
$imagesURL: $assetsURL;
$appImagesURL: $imagesURL + 'images/' +$appName+ '/';


.wygyt-app {
	color: #222;
  background-color: #fafafa;
  font-family: 'Helvetica Neue', helvetica, arial, sans-serif;
  font-size: 16px;
  margin: 0px auto;
	padding: 20px;
  text-align: center;
  .space-screen {

  	.launch {
  		color: #222;
      font-weight: bold;
  		position: relative;
      display: inline-block;
  		width: 180px;
  		height: 180px;
  		clear: both;
  		margin: 20px 10px;
	    border: 2px solid #ccc;
      cursor: pointer;
		  border-radius: 8px;
			-o-border-radius: 8px;
			-moz-border-radius: 8px;
			-webkit-border-radius: 8px;
      background-position: center top;
      background-repeat: no-repeat;
      &:hover {
        background-color: LightYellow;
      }
      &:nth-of-type(1) {
        background-image: url(http://rylyz-local.com/assets/images/trivia/trivia.png);
      }
      &:nth-of-type(2) {
        background-image: url(http://rylyz-local.com/assets/images/trivia/connect4.png);
      }
      &:nth-of-type(3) {
        background-image: url(http://rylyz-local.com/assets/images/trivia/car.png);
      }
      &:nth-of-type(4) {
        background-image: url(http://rylyz-local.com/assets/images/trivia/fitness.png);
      }
      &:nth-of-type(5) {
        background-image: url(http://rylyz-local.com/assets/images/trivia/chat.png);
      }
      &:nth-of-type(6) {
        background-image: url(http://rylyz-local.com/assets/images/trivia/ttt.png);
      }
			.name {
				position: absolute;
				bottom: 0;
				width: 100%;
				text-align: center;
				line-height: 2em;
			}
  	}
  }

}
