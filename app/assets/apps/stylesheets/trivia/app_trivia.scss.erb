.trivia-app {
  color: #222;
  font-family: 'Helvetica Neue', helvetica, arial, sans-serif;
  font-size: 16px;
  -webkit-transform: translateZ(0);
}

::-webkit-input-placeholder { 
  text-align: center;
}

#signin {
  text-align: center;
  input {
    background: transparent;
    display: inline-block;
    width: 300px;
    border: none;
    border-bottom: 1px solid #444;
    font-size: 21px;
    text-align: center;
    padding: .2em .5em;
    &:focus {
      border-color: #222;
      outline: none;
    }
  }
  .field {
    margin-bottom: 40px;
  }
}

#trivia {
  h1, h2, h3 {
    margin: 0;
    padding: 0;
    font-family: "HelveticaNeue-CondensedBold", "Helvetica Neue", sans-serif; 
    font-weight:600; 
  }

  h1 {
    font-size: 32px;
    line-height: 1.5;
    padding: .5em 1em;
    margin-bottom: .5em;
    text-align: center;
    background: -webkit-linear-gradient(#222, #444);
    color: white;
    text-shadow: 0 2px 3px black;
    border-radius: 4px 4px 0 0;
  }

  h2 {
    margin-bottom: 1em;
    font-size: 16px;
    text-transform: uppercase;
  }
  .hidden {
    display: none;
  }
  .inner {
    float: left;
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px 20px;
  }
}

#trivia-picks {
  width: 50%;
  float: left;
}

#trivia-results {
  width: 45%;
  padding-left: 5%;
  float: left;
  #status {
    font-size: 24px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, .8);
    text-transform: uppercase;
    &.correct {
      color: green;
    }
  }
  .correct  #status {
    color: green;
  }
  .wrong #status {
    color: #cc0000;
  }
  .winner #status {
    color: gold;
  }
  .winner-object p {
    width: 100%;
    overflow: hidden;
    whitespace: nowrap;
    text-overflow: ellipses;
  }
}

.choice {
  position: relative;
  padding: 1em;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  cursor: pointer;
  -webkit-transition: all .2s ease;
  &:hover {
    background: LightYellow;
  }
  &.selected {
    background: #222;
    color: white;
    font-weight: bold;
    border-color: transparent;
    -webkit-transform: rotate(-1deg) scale(1.05) translateY(-5%);
    box-shadow: 0 1px 3px rgba(0, 0, 0, .3), 0 5px 10px rgba(0, 0, 0, .3);
    text-shadow: 0 1px 1px black;
  }
  &.incorrect {
    color: #cc0000;
    font-weight: bold;
    &:after {
      content: 'X';
      font-size: 24px;
      color: #cc0000;
      font-weight: bold;
      position: absolute;
      right: 16px;
      top: 12px;
    }
  }
  &.correct {
    background: green;
    color: white;
    border-color: transparent;
    -webkit-transform: rotate(-1deg);
    box-shadow: 0 1px 3px rgba(0, 0, 0, .3), 0 5px 10px rgba(0, 0, 0, .3);
  }
}
