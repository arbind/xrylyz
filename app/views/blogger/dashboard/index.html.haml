.section
  %h2= "Welcome, #{current_member.nickname}"
  %p
    = "You have"
    %a{:href => dashboard_websites_path}
      = "#{pluralize(@sites.count, 'registered site')}!"
  %p
    - if @plan
      = "You are signed up for #{number_to_percentage(100*@plan.base_profit_sharing_rate, precision: 0)} profit sharing at #{number_to_currency(@plan.monthly_subscription_rate)} / month."
      %br
    = "Share this link to help increase your profit sharing rate:"
    .selectable= "http://www.rylyz.com/play?lr=#{current_blogger.share_key}"



- @html_page_title = "dashboard"
- if @sites.empty?
  .section
    = render :partial => 'registered_website_add'

- if 1 == @sites.count
  .section
    = render :partial => 'registered_website', :locals => {:site => @sites.first}
