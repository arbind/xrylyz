.site{:id => "button-delete-content"}
  %form{:action => dashboard_delete_site_path, :method => "post"}
    %input{:type => "hidden", :name => "oid", :value => site.id}
    %fieldset
      %legend
        =h site.url
      %h1
        =h site.title
      %p
        =h site.description
      .toolbar.fieldset.float-right
        %button{:class => "delete", :type=>"submit"}
          .button Delete Site
